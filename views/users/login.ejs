<!-- This ejs template is used to display Login page of the website-->

<% layout('layouts/boilerplate') %>

    <link rel="stylesheet" href="/css/login.css">


    <div id="bg-container" class="mb-4">
        <div id="card">
            <div class="d-flex flex-row justify-content-start">
                <div id='my-carousel'>
                    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="https://media.architecturaldigest.com/photos/571e97c5741fcddb16b559c9/2:1/w_5127,h_2563,c_limit/modernist-decor-inspiration-01.jpg"
                                    class="d-block w-100 carousel-image" alt="...">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>Shift your house</h5>
                                    <p>Shift your house on your finger tips</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img src="https://jumanji.livspace-cdn.com/magazine/wp-content/uploads/2019/08/26204630/Duplex-House-Design-Living-Room-1024x683.jpg"
                                    class="d-block w-100 carousel-image" alt="...">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>Post your property</h5>
                                    <p>Get more benefits by posting your property</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img src="https://assets-news.housing.com/news/wp-content/uploads/2020/04/22184310/Check-out-these-duplex-interior-design-ideas-FB-1200x700-compressed.jpg"
                                    class="d-block w-100 carousel-image" alt="...">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>Apply new look</h5>
                                    <p>Connect to all resources</p>
                                </div>
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </a>
                    </div>
                </div>
                <div id="login-page" class="d-flex flex-column justify-content-center">
                    <div>
                        <h2 class="login-heading">Sign In</h2>
                        <form action="/login" method="POST" class="validated-form" novalidate>
                            <div class="d-flex flex-row justify-content-center">
                                <input class="input-box form-control" id="username" name="username" type="text"
                                    placeholder="Enter Username" required>
                            </div>
                            <div class="d-flex flex-row justify-content-center">
                                <input class="input-box form-control" id="password" type="password" name="password"
                                    placeholder="Enter Password" required>
                            </div>
                            <div class="d-flex flex-row justify-content-center">
                                <button class="btn btn-primary">Log In</button>
                            </div>
                            <div class="d-flex flex-row justify-content-center">
                                <a href="/forgot">Forgotten password?</a>
                            </div>
                        </form>
                    </div>
                    <hr>
                    <div class="d-flex flex-row justify-content-center">
                        <p>Don't have an account?</p>
                    </div>
                    <div class="d-flex flex-row justify-content-center">
                        <a href="/signUp" class="btn btn-outline-primary">Create New Account</a>
                    </div>
                </div>
            </div>

        </div>