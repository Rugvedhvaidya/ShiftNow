<!-- This ejs template is used to display a form for editing the profile of the user-->

<% layout('layouts/boilerplate') %>

    <% layout('layouts/boilerplate') %>



        <div class="row">
            <h1 class="text-center">Edit Details</h1>
            <div class="col-6 offset-3">
                <form action="/profile/edit?_method=PUT" method="POST">
                    <div class="col-10 mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" name="username" id="username" class="form-control" required
                            value="<%= user.username %>">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="col-10 mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" id="email" class="form-control" required
                            value="<%= user.email %>">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="col-10 mb-3">
                        <label for="phone" class="form-label">Contact Number</label>
                        <input type="tel" name="phone" id="phone" class="form-control" required pattern="[0-9]{10}"
                            value="<%= user.phone %>">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-outline-info">Update Details</button>
                    </div>
                </form>
                <a href="/profile" class="btn btn-outline-primary mb-3">Back To Profile</a>

            </div>
        </div>